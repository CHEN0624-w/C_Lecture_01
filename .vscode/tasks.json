{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C: Build and Run",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "mkdir \"${fileDirname}\\output\" 2>nul && gcc -Wall -Wextra -g \"${file}\" -o \"${fileDirname}\\output\\${fileBasenameNoExtension}.exe\" && \"${fileDirname}\\output\\${fileBasenameNoExtension}.exe\""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
